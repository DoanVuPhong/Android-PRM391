<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Activity Concept!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:onClick="moveIntent"
        android:text="Input Name Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btTheme"
        android:text="Apply Theme To an Activity"
        android:onClick="clickToApplyTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btDialog"
        android:text="Display Dialog Window"
        android:onClick="clickToShowDiaglog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btProgress"
        android:text="Display Progress Dialog"
        android:onClick="clickToDisplayProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btComplexProgressDialog"
        android:text="Display Complex Progress Diaglog"
        android:onClick="clickToShowComplexProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />







</LinearLayout>